/* pages/flights/flights.wxss */
.container {
  background-color: #ffffff;
  min-height: 100vh;
  padding-bottom: 200rpx;
}

/* 头部样式 */
.header {
  background-color: #ffffff;
  padding: 32rpx 32rpx 16rpx 32rpx;
}

.header-content {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.title-container {
  flex: 1;
  display: flex;
  justify-content: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #121417;
  text-align: center;
}

/* 搜索表单样式 */
.search-form {
  padding: 24rpx 32rpx;
}

.form-item {
  margin-bottom: 24rpx;
}

.input-box {
  height: 96rpx;
  background-color: #f0f2f5;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 0 32rpx;
  box-sizing: border-box;
}

.input-placeholder {
  font-size: 32rpx;
  color: #61788a;
  line-height: 1;
  vertical-align: middle;
}

.input-text {
  font-size: 32rpx;
  color: #121417;
  line-height: 1;
  vertical-align: middle;
}

/* 搜索按钮样式 */
.search-button-container {
  margin-top: 24rpx;
}

.search-button {
  width: 100%;
  height: 96rpx;
  background-color: #33a3f2;
  color: #121417;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search-button::after {
  border: none;
}

/* 城市选择器样式 */
.city-picker {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: none;
}

.city-picker.show {
  display: flex;
  align-items: flex-end;
}

.city-picker-content {
  width: 100%;
  max-height: 60vh;
  background-color: #ffffff;
  border-radius: 32rpx 32rpx 0 0;
  padding: 32rpx;
}

.city-picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f2f5;
}

.city-picker-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #121417;
}

.city-picker-close {
  font-size: 48rpx;
  color: #61788a;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.city-list {
  max-height: 40vh;
}

.city-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f2f5;
}

.city-item:last-child {
  border-bottom: none;
}

.city-name {
  font-size: 32rpx;
  color: #121417;
}

.city-code {
  font-size: 28rpx;
  color: #61788a;
}
